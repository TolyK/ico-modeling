<% content_for :title, @ico.title %>
<% provide(:meta_description, @ico.meta_description) %>
<%= render 'layouts/header' %>

<div class='container'>
  <p id="notice"><%= notice %></p>
  <h1 class='center'><%= image_tag((@ico.logo_img), class: 'circle responsive-img', height: '48', width: '48') %><%= @ico.name %></h1>
  <h4 class='center'>ICO Valuation*: 
    <% if @ico.token_price_low? %>
      $<%= number_with_precision((@ico.token_price_low.to_f * @ico.total_supply.to_f / 1000000), :precision => 1, :delimiter => ',') %>MM 
    <% else %>
      $<%= number_with_precision((@ico.ico_currency_price.to_f / @ico.exchange_rate_low.to_f * @ico.total_supply.to_f / 1000000), :precision => 1, :delimiter => ',') %>MM
    <% end %>
     -  
    <% if @ico.token_price_high? %> 
      $<%= number_with_precision((@ico.token_price_high.to_f * @ico.total_supply.to_f / 1000000), :precision => 1, :delimiter => ',') %>MM
    <% else %>
      $<%= number_with_precision((@ico.ico_currency_price.to_f / @ico.exchange_rate_high.to_f * @ico.total_supply.to_f / 1000000), :precision => 1, :delimiter => ',') %>MM
    <% end %>
  </h4>
  <p class='center small'>*in USD, the MM is for millions <a href="http://emoticoner.com"><img src="http://emoticoner.com/files/emoticons/smiley_faces/Dr-Evil-smiley-face.gif" alt="" /></a></p>
  <div class='center'><%= link_to @ico.name + " token sale", @ico.website, class: 'waves-effect waves-light btn', target: :_blank %></div>
  <h5 class='center'><%= @ico.ICO_start_date.strftime("%B" + " " + "%e") %> to <%= @ico.ICO_end_date.strftime("%B" + " " + "%e") %></h5>
  <h6 class=center><%= link_to "Disclaimer", disclaimer_index_path %></h6>
  <%= render 'layouts/mailchimp' %>
  
  

  
  
  </br>
  <i>Ratings on a 1-10 scale, 1 being the lowest and 10 being the highest</i>
</div>

